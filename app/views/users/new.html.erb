<h1>Sign Up</h1>
<hr>

<%= form_for @user do |f| %>
<div class="form-group">
  <%= f.label :email %>
  <%= f.email_field(:email, placeholder: "email@example.com", class: "form-control") %>
</div>
<div class="form-group">
  <%= f.label :password %>
  <%= f.password_field(:password, placeholder: "Must be at least 6 characters", class: "form-control") %>
</div>
<div class="form-group">
  <%= f.label :password_conformation %>
  <%= f.password_field(:password_conformation, class: "form-control", placeholder: "Confirm password") %>
</div>
<%= f.submit "Sign Up", class: "btn btn-block" "btn-default" %>

<% end %>

